<% if !user_signed_in? %>
  <div class="jumbotron">
    <h2>Your Favorite Movies Reviewed</h2>
    <p>Pork belly forage hashtag, Banksy chia meh kogi yr American Apparel quinoa semiotics. 8-bit Banksy post-ironic skateboard single-origin coffee Odd Future. Meditation irony hoodie gluten-free viral</p>
    <p><%= link_to "Signup to write a review", new_user_registration_path, class: 'btn btn-primary btn-lg' %></p>
  </div>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to ( image_tag movie.image.url(:medium), class: 'image'), movie %>
      </div>
    </div>
  <% end %>
</div>